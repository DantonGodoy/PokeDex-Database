{
  "name": "pokedex-search-database",
  "description": "A search-list based on the PokeApi that displays all the Pokémon´s name and API reference.",
  "version": "1.0.0",
  "author": "Danton de Godoy Petri Lima <dantongplima@gmail.com>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "dev": "cross-env NODE_ENV=development webpack-dev-server --open --hot",
    "build": "cross-env NODE_ENV=production webpack --progress --hide-modules",
    "test": "cross-env NODE_ENV=test nyc mocha-webpack --webpack-config webpack.config.js --require test/setup.js test/**/*.spec.js"
  },
  "nyc": {
    "include": [
      "src/**/*.(js|vue)"
    ],
    "instrument": false,
    "sourceMap": false
  },
  "dependencies": {
    "axios": "^0.18.0",
    "vue": "^2.5.11"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not ie <= 8"
  ],
  "devDependencies": {
    "@vue/test-utils": "^1.0.0-beta.29",
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.2",
    "babel-plugin-istanbul": "^5.1.4",
    "babel-preset-env": "^1.6.0",
    "babel-preset-stage-3": "^6.24.1",
    "cross-env": "^5.0.5",
    "css-loader": "^0.28.7",
    "expect": "^24.8.0",
    "file-loader": "^1.1.4",
    "jsdom": "^15.1.1",
    "jsdom-global": "^3.0.2",
    "mocha": "^10.2.0",
    "mocha-webpack": "^1.1.0",
    "node-sass": "^4.5.3",
    "nyc": "^14.1.1",
    "sass-loader": "^6.0.6",
    "vue-loader": "^13.0.5",
    "vue-template-compiler": "^2.4.4",
    "webpack": "^3.6.0",
    "webpack-dev-server": "^2.9.1",
    "webpack-node-externals": "^1.7.2"
  }
}
